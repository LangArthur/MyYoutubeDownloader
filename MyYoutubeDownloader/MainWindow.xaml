<Window x:Class="MyYoutubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyYoutubeDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Download" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click" Height="30" Grid.Column="3"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="0,190,0,0" TextWrapping="Wrap" Text="Youtbe video URL" VerticalAlignment="Top" Width="348" Grid.Column="1"/>

    </Grid>
</Window>
